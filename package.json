{
  "name": "sundayhug-app",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:customer": "turbo dev --filter=@sundayhug/customer",
    "dev:dashboard": "turbo dev --filter=@sundayhug/dashboard",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "prettier": "^3.5.3"
  },
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=20"
  }
}

